{
  "version": "1.0.0",
  "description": "Project scaffold for building an agent-friendly GitHub Pages site",
  "variables": {
    "projectName": { "description": "npm package name (lowercase, hyphenated)", "example": "ha-hub", "required": true },
    "displayName": { "description": "Display name for headings and titles", "example": "HA Hub", "required": true },
    "personaName": { "description": "Short name for the agent persona", "example": "HA", "required": true },
    "domain": { "description": "Production domain (without protocol)", "example": "ha-hub.com", "required": true },
    "brandColor": { "description": "Primary brand color in hex", "example": "#4CAF50", "required": true },
    "ecosystem": { "description": "The ecosystem or topic this site covers", "example": "Home Assistant", "required": true },
    "contentTypes": { "description": "JSON array of content section names", "example": "[\"integrations\", \"automations\", \"tutorials\"]", "required": true },
    "authorName": { "description": "Author name or handle", "example": "someone", "required": true }
  },
  "directories": [
    "src",
    "src/data",
    "src/shared",
    "src/shared/css",
    "src/shared/js",
    "src/shared/js/i18n",
    "src/shared/js/i18n/locales",
    "src/blog",
    "src/blog/posts",
    "src/guide",
    "src/guide/data",
    "src/pulse",
    "src/pulse/data",
    "build",
    "cli",
    "cli/lib",
    "docs"
  ],
  "files": [
    {
      "path": "package.json",
      "source": "template",
      "template": "https://js-clawhub.com/api/v1/craft/templates/package.json",
      "variables": ["projectName", "authorName", "domain"],
      "description": "Project metadata and build scripts"
    },
    {
      "path": "build/build.js",
      "source": "template",
      "template": "https://js-clawhub.com/api/v1/craft/templates/build.js",
      "variables": [],
      "description": "Build script entry point"
    },
    {
      "path": "cli/lib/builder.js",
      "source": "template",
      "template": "https://js-clawhub.com/api/v1/craft/templates/builder.js",
      "variables": [],
      "description": "Build logic with API layer generation"
    },
    {
      "path": "src/data/navigation.json",
      "source": "template",
      "template": "https://js-clawhub.com/api/v1/craft/templates/navigation.json",
      "variables": ["ecosystem", "displayName"],
      "description": "Core data file — defines all content and structure"
    },
    {
      "path": ".gitignore",
      "source": "template",
      "template": "https://js-clawhub.com/api/v1/craft/templates/gitignore",
      "variables": [],
      "description": "Git ignore rules"
    },
    {
      "path": "src/index.html",
      "source": "template",
      "template": "https://js-clawhub.com/api/v1/craft/templates/index.html",
      "variables": ["displayName", "personaName", "domain", "brandColor", "ecosystem"],
      "description": "Agent-first homepage"
    },
    {
      "path": "src/shared/js/i18n/locales/zh-CN.js",
      "source": "template",
      "template": "https://js-clawhub.com/api/v1/craft/templates/zh-CN.js",
      "variables": ["displayName", "personaName", "ecosystem", "domain"],
      "description": "Chinese locale translations"
    },
    {
      "path": "src/shared/js/i18n/locales/en-US.js",
      "source": "template",
      "template": "https://js-clawhub.com/api/v1/craft/templates/en-US.js",
      "variables": ["displayName", "personaName", "ecosystem", "domain"],
      "description": "English locale translations"
    },
    {
      "path": "src/skill.md",
      "source": "template",
      "template": "https://js-clawhub.com/api/v1/craft/templates/skill.md",
      "variables": ["projectName", "displayName", "personaName", "domain", "ecosystem"],
      "description": "Agent skill contract — capabilities and endpoints"
    },
    {
      "path": "src/soul.md",
      "source": "template",
      "template": "https://js-clawhub.com/api/v1/craft/templates/soul.md",
      "variables": ["displayName", "personaName", "ecosystem"],
      "description": "Agent persona definition and behavior rules"
    },
    {
      "path": "src/heartbeat.md",
      "source": "template",
      "template": "https://js-clawhub.com/api/v1/craft/templates/heartbeat.md",
      "variables": ["displayName", "personaName", "domain"],
      "description": "Proactive engagement rules"
    },
    {
      "path": "src/llms.txt",
      "source": "template",
      "template": "https://js-clawhub.com/api/v1/craft/templates/llms.txt",
      "variables": ["displayName", "personaName", "domain"],
      "description": "AI crawler discovery file"
    },
    {
      "path": "src/skill.json",
      "source": "template",
      "template": "https://js-clawhub.com/api/v1/craft/templates/skill.json",
      "variables": ["projectName", "displayName", "domain", "authorName"],
      "description": "Machine-readable skill metadata"
    },
    {
      "path": "src/shared/css/brutal.css",
      "source": "copy",
      "url": "https://js-clawhub.com/shared/css/brutal.css",
      "description": "Neo-Brutalism design system"
    },
    {
      "path": "src/shared/js/threejs-bg.js",
      "source": "copy",
      "url": "https://js-clawhub.com/shared/js/threejs-bg.js",
      "description": "Animated 3D background"
    },
    {
      "path": "src/shared/js/nav.js",
      "source": "copy",
      "url": "https://js-clawhub.com/shared/js/nav.js",
      "description": "Navigation bar component with i18n"
    },
    {
      "path": "src/shared/js/footer.js",
      "source": "copy",
      "url": "https://js-clawhub.com/shared/js/footer.js",
      "description": "Footer component with i18n"
    },
    {
      "path": "src/shared/js/i18n/index.js",
      "source": "copy",
      "url": "https://js-clawhub.com/shared/js/i18n/index.js",
      "description": "Internationalization framework"
    }
  ]
}
